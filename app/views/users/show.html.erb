
<main class=" row border border-1 mt-2">
    <div class="col  " >
 <%= image_tag (@post.photo) unless @post.photo.nil? %>
</div>
<div class="col mt-3" >
 <h2><%=@post.name%></h2>
 <h3>Number of posts: <%= @post.posts_counter%></h3>
</div>


    <div>


</div>
     <% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>
</main>
<div class="border border-1">
        <h2>Bio</h2>
<p><%=@post.bio %></p>
</div>


<%@post.recent_posts.each do |post|%>
<div class="border border-1">
   <%= link_to post.title,"/users/#{@post.id}/posts/#{post.id}",class:"badge badge-light"%>
<p><%=post.title%></p>
<p><%=post.text%></p>
 <p class="counter"><%= "Comments: #{post.comments_counter || 0}, Likes: #{post.likes_counter || 0 }" %></p>
</div>
<%end%>
<div class="col-md-12 text-center mt-2" >
<button class="btn btn-light mt-3" > 
<%= link_to ('see all posts'),user_posts_path(@post.id ),class:"btn" %>
 </button>
 </div> 
 <br/>
 <br/>
 <%= link_to ('back home'),users_path ,class:"d-flex align-items-center justify-content-center m-3 badge badge-light"%>


   

