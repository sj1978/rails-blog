
 <main class=" row border border-1 mt-2">
 <div class="col likes">
    <h1 ><%= @post.title %>  by:<%=@post.author.name%></h1>
    <p class="corner" ><%= "Comments: #{@post.comments_counter || 0}, Likes: #{@post.likes_counter || 0 }" %></p>
  
  <p><%= @post.text %></p>
</div>
  <br/>
<div class="row border border-1 mt-2" >
    <% @post.comments.each do |comment| %>
      <p><%= "#{comment.author.name}: #{comment.text}" %></p>
    <% end %>
  </div>
 </main>

